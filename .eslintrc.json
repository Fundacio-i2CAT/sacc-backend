{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["standard"],
  "globals": {
    "Atomics": "readonly",
    "before": "readonly",
    "after": "readonly",
    "SharedArrayBuffer": "readonly",
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "web3": "readonly",
    "artifacts": "readonly",
    "contract": "readonly",
    "it": "readonly",
    "xit": "readonly",
    "describe": "readonly",
    "BigInt": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "plugins": [
    "react",
    "mocha"
  ],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error"
  }
}
